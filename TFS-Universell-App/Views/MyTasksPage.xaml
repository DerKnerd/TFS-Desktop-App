<mt:MtPage
    x:Class="TFS.Client.Views.MyTasksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mt="using:MyToolkit.Paging"
    xmlns:local="using:TFS.Client.UserControls"
    mc:Ignorable="d" Name="view">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <local:TaskTableView x:Name="Tasks" ViewModel="{Binding ElementName=view, Path=ViewModel}"></local:TaskTableView>
    </Grid>
</mt:MtPage>
