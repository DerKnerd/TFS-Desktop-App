<mt:MtPage
    x:Class="TFS.Client.Views.ListProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TFS.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mt="using:MyToolkit.Paging"
    mc:Ignorable="d"
    Name="view">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <GridView Name="Grid" ItemClick="Grid_ItemClick" IsItemClickEnabled="True">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Width="204" Height="100" Margin="2" Padding="5" Background="{StaticResource SystemControlBackgroundAccentBrush}">
                        <TextBlock Foreground="White" FontWeight="Bold" TextWrapping="Wrap" Text="{Binding Name}"></TextBlock>
                        <TextBlock Foreground="White" TextWrapping="Wrap" Text="{Binding Description}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</mt:MtPage>
